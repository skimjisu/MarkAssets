{$R *.dfm}

procedure TMainfrm.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  //Action := caFree;
end;

procedure TMainfrm.FormCreate(Sender: TObject);
var
  ViewPanel: TPanel;
  PageControl: TPageControl;
  TabSheet: TTabSheet;
  TabNames: array[0..5] of string;
  I: Integer;
  c: Integer;
begin
  SetRoundedCorners(self.Handle, TRoundedWindowCornerType(2));
// 徘 捞抚 汲沥
  TabNames[0] := 'Dashboard';
  TabNames[1] := 'Inventory';
  TabNames[2] := 'List';
  TabNames[3] := 'Service';
  TabNames[4] := 'Admin';
  TabNames[5] := 'Users';

  // TPanel 积己
  ViewPanel := TPanel.Create(Self);
  ViewPanel.Parent := Self;
  ViewPanel.Align := alClient;
  ViewPanel.BorderStyle := bsNone;

  // TPageControl 积己
  PageControl := TPageControl.Create(ViewPanel);
  PageControl.Parent := ViewPanel;
  PageControl.Align := alClient;

  // 阿 徘 积己
  for I := Low(TabNames) to High(TabNames) do
  begin
    TabSheet := TTabSheet.Create(PageControl);
    TabSheet.PageControl := PageControl;
    TabSheet.Caption := TabNames[I];
  end;

  for c := 0 to PageControl.PageCount - 1 do
  begin
    PageControl.Pages[c].TabVisible := False;
  end;
    PageControl.ActivePageIndex := 0;

   if I = 0 then
    begin
      // TDashbdFrm 积己
      DashbdFrm := TDashbdFrm.Create(TabSheet);
      DashbdFrm.Parent := TabSheet;
      DashbdFrm.Align := alClient;
    end;
end;

procedure TMainfrm.FormShow(Sender: TObject);
begin
  SpeedButton2.Caption := LoggedUser;
end;

procedure TMainfrm.Panel1MouseDown(Sender: TObject; Button: TMouseButton; Shift: TShiftState; X, Y: Integer);
const
  sc_DragMove = $F012;
begin
  ReleaseCapture;
  Perform(wm_SysCommand, sc_DragMove, 0);
end;

procedure TMainfrm.Panel1MouseMove(Sender: TObject; Shift: TShiftState; X, Y: Integer);
begin
  ReleaseCapture;
  SendMessage(Handle, WM_NCLBUTTONDOWN, HTCAPTION, 0);
end;

procedure TMainfrm.SpeedButton1Click(Sender: TObject);
begin
  application.Terminate;
end;

end.
